<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	style="@style/Theme.IHaveQuest.CardView"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_marginBottom="7dp">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical">

		<androidx.constraintlayout.widget.ConstraintLayout
			android:id="@+id/cl_first"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_margin="7dp">

			<ImageView
				android:id="@+id/iv_equipment"
				android:layout_width="50dp"
				android:layout_height="50dp"
				android:src="@drawable/wooden_stick"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toTopOf="parent" />

			<TextView
				android:id="@+id/tv_item_name"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginStart="17dp"
				android:textSize="20sp"
				app:layout_constraintStart_toEndOf="@id/iv_equipment"
				app:layout_constraintTop_toTopOf="@id/iv_equipment"
				tools:text="wooden stick" />

			<ImageView
				android:id="@+id/im_first_element"
				android:layout_width="20dp"
				android:layout_height="20dp"
				android:layout_marginStart="7dp"
				android:src="@drawable/normal"
				app:layout_constraintBottom_toBottomOf="@id/tv_item_name"
				app:layout_constraintStart_toEndOf="@id/tv_item_name"
				app:layout_constraintTop_toTopOf="@id/tv_item_name" />

			<ImageView
				android:id="@+id/in_second_element"
				android:layout_width="20dp"
				android:layout_height="20dp"
				android:layout_marginStart="7dp"
				android:src="@drawable/wood"
				app:layout_constraintBottom_toBottomOf="@id/im_first_element"
				app:layout_constraintStart_toEndOf="@id/im_first_element"
				app:layout_constraintTop_toTopOf="@id/im_first_element" />

			<ImageView
				android:id="@+id/damage"
				android:layout_width="20dp"
				android:layout_height="20dp"
				android:layout_marginStart="17dp"
				android:src="@drawable/axe"
				app:layout_constraintBottom_toBottomOf="@id/iv_equipment"
				app:layout_constraintStart_toEndOf="@id/iv_equipment" />

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginStart="7dp"
				app:layout_constraintStart_toEndOf="@id/damage"
				app:layout_constraintTop_toTopOf="@id/damage"
				tools:text="7-10" />

			<ImageView
				android:id="@+id/iv_check_mark"
				android:layout_width="30dp"
				android:layout_height="30dp"
				android:src="@drawable/check_mark"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintTop_toTopOf="parent" />


		</androidx.constraintlayout.widget.ConstraintLayout>

		<androidx.constraintlayout.widget.ConstraintLayout
			android:id="@+id/cl_second"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_margin="7dp"
			android:visibility="gone">

			<TextView
				android:id="@+id/tv_item_name_l"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="25sp"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toEndOf="@id/iv_equipment_l"
				app:layout_constraintTop_toTopOf="parent"
				tools:text="wooden stick" />

			<ImageView
				android:id="@+id/iv_equipment_l"
				android:layout_width="100dp"
				android:layout_height="100dp"
				android:src="@drawable/wooden_stick"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toTopOf="parent" />

			<ImageView
				android:id="@+id/im_first_damage"
				android:layout_width="20dp"
				android:layout_height="20dp"
				android:layout_marginStart="17dp"
				android:layout_marginTop="7dp"
				android:src="@drawable/normal"
				app:layout_constraintStart_toEndOf="@id/iv_equipment_l"
				app:layout_constraintTop_toBottomOf="@id/tv_item_name_l" />

			<TextView
				android:id="@+id/tv_first_damage"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginStart="7dp"
				app:layout_constraintBottom_toBottomOf="@id/im_first_damage"
				app:layout_constraintStart_toEndOf="@id/im_first_damage"
				app:layout_constraintTop_toTopOf="@id/im_first_damage"
				tools:text="5-7" />

			<TextView
				android:id="@+id/tv_first_bonus"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginStart="7dp"
				android:textColor="@color/darkGreen"
				app:layout_constraintBottom_toBottomOf="@id/tv_first_damage"
				app:layout_constraintStart_toEndOf="@id/tv_first_damage"
				app:layout_constraintTop_toTopOf="@id/tv_first_damage"
				tools:text="+0%" />

			<ImageView
				android:id="@+id/im_second_damage"
				android:layout_width="20dp"
				android:layout_height="20dp"
				android:layout_marginStart="17dp"
				android:layout_marginTop="7dp"
				android:src="@drawable/wood"
				app:layout_constraintStart_toEndOf="@id/iv_equipment_l"
				app:layout_constraintTop_toBottomOf="@id/tv_first_damage" />

			<TextView
				android:id="@+id/tv_second_damage"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginStart="7dp"
				app:layout_constraintBottom_toBottomOf="@id/im_second_damage"
				app:layout_constraintStart_toEndOf="@id/im_second_damage"
				app:layout_constraintTop_toTopOf="@id/im_second_damage"
				tools:text="2-3" />

			<TextView
				android:id="@+id/tv_second_bonus"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginStart="7dp"
				android:textColor="@color/darkGreen"
				app:layout_constraintBottom_toBottomOf="@id/tv_second_damage"
				app:layout_constraintStart_toEndOf="@id/tv_second_damage"
				app:layout_constraintTop_toTopOf="@id/tv_second_damage"
				tools:text="+0%" />

			<TextView
				android:id="@+id/description"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="7dp"
				app:layout_constraintTop_toBottomOf="@id/iv_equipment_l"
				tools:text="It is just wooden stick" />

			<com.google.android.material.switchmaterial.SwitchMaterial
				android:id="@+id/use"
				style="@style/Theme.IHaveQuest.Switch"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="7dp"
				android:checked="true"
				android:text="@string/use"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintTop_toBottomOf="@id/description" />


			<TextView
				android:id="@+id/tv_eq_type"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				app:layout_constraintTop_toTopOf="@id/use"
				app:layout_constraintStart_toStartOf="parent"
				tools:text="Right hand"
				app:layout_constraintBottom_toBottomOf="@id/use" />

		</androidx.constraintlayout.widget.ConstraintLayout>

	</LinearLayout>

</com.google.android.material.card.MaterialCardView>