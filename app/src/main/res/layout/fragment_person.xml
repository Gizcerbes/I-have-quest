<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/bottom_navi"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/text_title"
                        android:layout_marginStart="7dp"
                        app:layout_constraintStart_toEndOf="@id/iv_photo"
                        app:layout_constraintTop_toTopOf="parent"
                        android:text="@string/title"
                        android:textSize="20sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_marginStart="7dp"
                        android:id="@+id/tv_title"
                        app:layout_constraintStart_toEndOf="@id/text_title"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="Веселый роджер"
                        android:textSize="20sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:src="@drawable/person"
                        android:background="@color/gray"
                        app:layout_constraintStart_toStartOf="@id/iv_photo"
                        app:layout_constraintTop_toTopOf="@id/iv_photo"
                        app:layout_constraintEnd_toEndOf="@id/iv_photo"
                        app:layout_constraintBottom_toBottomOf="@id/iv_photo" />

                    <ImageView
                        android:id="@+id/iv_photo"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:src="@drawable/person"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_name_text"
                        android:layout_marginStart="7dp"
                        app:layout_constraintStart_toEndOf="@id/iv_photo"
                        app:layout_constraintTop_toBottomOf="@id/tv_title"
                        android:text="@string/name"
                        android:textSize="20sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_marginStart="7dp"
                        app:layout_constraintStart_toEndOf="@id/tv_name_text"
                        app:layout_constraintTop_toBottomOf="@id/tv_title"
                        tools:text="Gohan"
                        android:textSize="20sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tv_lvl_text"
                        android:layout_marginStart="7dp"
                        app:layout_constraintStart_toEndOf="@id/iv_photo"
                        app:layout_constraintTop_toBottomOf="@id/tv_name_text"
                        android:text="@string/lvl"
                        android:textSize="20sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tv_lvl"
                        android:layout_marginStart="7dp"
                        app:layout_constraintStart_toEndOf="@id/tv_lvl_text"
                        app:layout_constraintTop_toBottomOf="@id/tv_name_text"
                        tools:text="1"
                        android:textSize="20sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_margin="16dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_characteristics"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:text="@string/characteristics"
                        android:background="@color/dimgray" />

                    <ImageView
                        android:id="@+id/iv_force"
                        android:layout_marginTop="7dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_characteristics"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/fist" />

                    <TextView
                        android:id="@+id/tv_force_text"
                        android:layout_marginStart="7dp"
                        app:layout_constraintStart_toEndOf="@id/iv_force"
                        app:layout_constraintTop_toTopOf="@id/iv_force"
                        android:text="@string/force"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_marginStart="7dp"
                        app:layout_constraintStart_toEndOf="@id/tv_force_text"
                        app:layout_constraintTop_toTopOf="@id/tv_force_text"
                        tools:text="10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:id="@+id/iv_defense"
                        android:layout_marginTop="7dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/iv_force"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/shield" />

                    <TextView
                        android:id="@+id/tv_defense_text"
                        android:layout_marginStart="7dp"
                        app:layout_constraintStart_toEndOf="@id/iv_defense"
                        app:layout_constraintTop_toTopOf="@id/iv_defense"
                        android:text="@string/defense"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_marginStart="7dp"
                        app:layout_constraintStart_toEndOf="@id/tv_defense_text"
                        app:layout_constraintTop_toTopOf="@id/tv_defense_text"
                        tools:text="10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:id="@+id/iv_agility"
                        android:layout_marginTop="7dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/iv_defense"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/agility" />

                    <TextView
                        android:id="@+id/tv_agility_text"
                        android:layout_marginStart="7dp"
                        app:layout_constraintStart_toEndOf="@id/iv_agility"
                        app:layout_constraintTop_toTopOf="@id/iv_agility"
                        android:text="@string/agility"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_marginStart="7dp"
                        app:layout_constraintStart_toEndOf="@id/tv_agility_text"
                        app:layout_constraintTop_toTopOf="@id/tv_agility_text"
                        tools:text="10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:id="@+id/iv_health"
                        android:layout_marginTop="7dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/iv_agility"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_baseline_favorite_24" />

                    <TextView
                        android:id="@+id/tv_health_text"
                        android:layout_marginStart="7dp"
                        app:layout_constraintStart_toEndOf="@id/iv_health"
                        app:layout_constraintTop_toTopOf="@id/iv_health"
                        android:text="@string/health"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_marginStart="7dp"
                        app:layout_constraintStart_toEndOf="@id/tv_health_text"
                        app:layout_constraintTop_toTopOf="@id/tv_health_text"
                        tools:text="10 (100 hp)"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:id="@+id/iv_experience"
                        android:layout_marginTop="7dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/iv_health"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/experiance" />

                    <TextView
                        android:id="@+id/tv_experience_text"
                        android:layout_marginStart="7dp"
                        app:layout_constraintStart_toEndOf="@id/iv_experience"
                        app:layout_constraintTop_toTopOf="@id/iv_experience"
                        android:text="@string/experience"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tv_experience"
                        android:layout_marginStart="7dp"
                        app:layout_constraintStart_toEndOf="@id/tv_experience_text"
                        app:layout_constraintTop_toTopOf="@id/tv_experience_text"
                        tools:text="1/100"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_margin="16dp"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/btn_equipment"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/equipment"
                        app:layout_constraintEnd_toStartOf="@+id/button"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <Button
                        android:id="@+id/button"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/professions"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@id/btn_equipment" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

        </ScrollView>


        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:menu="@menu/menu" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>