<resources xmlns:tools="http://schemas.android.com/tools">
	<!-- Base application theme. -->
	<style name="Theme.IHaveQuest" parent="Theme.MaterialComponents.Light.NoActionBar">
		<!-- Primary brand color. -->
		<item name="colorPrimary">@color/redwood</item>
		<item name="colorPrimaryVariant">@color/black</item>
		<item name="colorOnPrimary">@color/redwood</item>
		<!-- Secondary brand color. -->
		<item name="colorSecondary">@color/teal_200</item>
		<item name="colorSecondaryVariant">@color/teal_700</item>
		<item name="colorOnSecondary">@color/black</item>
		<!-- Status bar color. -->
		<item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
		<!-- Customize your theme here. -->
		<item name="android:textColor">@color/black</item>
		<item name="titleTextColor">@color/linen</item>
	</style>

	<style name="Theme.IHaveQuest.CardView" parent="Widget.MaterialComponents.CardView">
		<item name="cardBackgroundColor">@color/linen</item>
		<item name="contentPadding">3dp</item>
		<item name="strokeColor">@color/redwood</item>
		<item name="strokeWidth">1dp</item>
		<item name="cardCornerRadius">14dp</item>
		<item name="cardElevation">6dp</item>
	</style>

	<style name="Theme.IHaveQuest.CardView.Button" parent="Theme.IHaveQuest.CardView">
		<item name="contentPadding">7dp</item>
		<item name="android:clickable">true</item>
	</style>

	<style name="Theme.IHaveQuest.CardView.Button.Outlined" parent="Theme.IHaveQuest.CardView.Button">
		<item name="cardBackgroundColor">?attr/colorBackgroundFloating</item>
	</style>

	<style name="Theme.IHaveQuest.Switch" parent="Widget.MaterialComponents.CompoundButton.Switch">
		<item name="materialThemeOverlay">@style/ThemeOverlay.App.Switch</item>
	</style>

	<style name="ThemeOverlay.App.Switch" parent="">
		<item name="colorOnSurface">@color/oliveDrab</item>
		<item name="colorSecondary">@color/darkGreen</item>
	</style>

	<style name="Theme.IHaveQuest.BottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
		<item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
	</style>

	<style name="ThemeOverlay.App.BottomNavigationView" parent="">
		<item name="colorPrimary">@color/linen</item>
		<item name="colorOnPrimary">@color/black</item>
	</style>

	<style name="Theme.IHaveQuest.ToolBar" parent="Widget.MaterialComponents.Toolbar">
		<item name="titleTextColor">@color/linen</item>
		<item name="navigationIconTint">@color/linen</item>
	</style>



</resources>